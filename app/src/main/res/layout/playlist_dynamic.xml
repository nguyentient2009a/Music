<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="8dp"
        android:id="@+id/imageview_background_playlist"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <View
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="110dp" />

    <ImageView
        android:id="@+id/imageview_playlist"
        android:layout_alignBottom="@id/imageview_background_playlist"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:elevation="6dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_alignBottom="@id/imageview_playlist"
        android:text="Những Bài Hít Hà"
        android:layout_toRightOf="@id/imageview_playlist"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginLeft="13dp"
        android:id="@+id/textview_name_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:maxLines="1" />
</RelativeLayout>