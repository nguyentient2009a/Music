<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_current_playlist_song_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:elevation="20dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_image_song_current_playlist_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imageview_image_song_current_playlist_item"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cardview_image_song_current_playlist_item"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_song_name_current_playlist_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:maxWidth="250dp"
                android:text="Em của ngày hôm qua"
                android:textColor="@color/colorTextWhite"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textview_artist_name__current_playlist_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="250dp"
                android:text="Sơn Tùng MTP"
                android:textColor="@color/colorTextWhite"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_playing_current_playlist_item"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorTextWhite"
            android:text=""
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="10sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>