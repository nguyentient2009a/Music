<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:paddingHorizontal="@dimen/padding_horizontal"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fragment
            android:id="@+id/fragmentBanner"
            android:name="com.myteam.myapplication.fragment.BannerFragment"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content" />

        <fragment
            android:name="com.myteam.myapplication.fragment.NewestAlbumsFragment"
            android:layout_width="match_parent"
            android:layout_marginVertical="15dp"
            android:layout_height="wrap_content" />

        <fragment
            android:name="com.myteam.myapplication.fragment.HotPlaylistFragment"
            android:layout_width="match_parent"
            android:layout_marginVertical="15dp"
            android:layout_height="wrap_content" />

        <fragment
            android:name="com.myteam.myapplication.fragment.TopPlaylistFragment"
            android:layout_width="match_parent"
            android:layout_marginVertical="15dp"
            android:layout_height="wrap_content" />

        <fragment
            android:name="com.myteam.myapplication.fragment.ActivityPlaylistFragment"
            android:layout_width="match_parent"
            android:layout_marginVertical="15dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>